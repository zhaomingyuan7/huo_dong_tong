.form
  .container(style="margin:10px 50px" )
    %h1 活动通
  .row(style="width:1320px" )
    .login-box
      %h4 重置密码
      %br
      .body-right-1
        %a(href = '/register')用户登录
      =form_tag '/create_login_session' do
        .input-group
          %span.input-group-addon( style = "width:109px" ) 账号
          %input.form-control(name = 'name' type = "text" style = 'width:400px'class='form-control' placeholder = '请输入账号名')
        %br
        - if flash[:error]
          .alert.alert-danger
            =flash[:error]
        =submit_tag'下一步',:class => 'submit',:style=>' width:130px;margin-left: 170px;'
