.form
  .container(style="margin:10px 50px" )
    %h1 活动通
  .row(style="width:1320px" )
    .login-box
      %h4 重置密码
      %br
      .body-right-1
        %a(href = '/login')用户登录
      =form_for :user, url: '/post_password_one' do |f|
        .input-group
          %span.input-group-addon(style="width:110px") 账号
          =f.text_field :name, :class => 'form-control', :style => 'width:345px',:placeholder => '请输入账号名'
        %br
        - if flash[:error]
          .alert.alert-danger
            =flash[:error]
        =submit_tag'下一步',:class => 'submit',:style=>' width:130px;margin-left: 170px;'