.container(style="margin:10px 50px" )
  .navbar-nav.navbar-right
    你好,管理员
    -if current_user
      =link_to '退出',logout_path,method: 'delete'
  %h1 活动通
.welcome-box
  %table.table
    %thead
      用户管理
      %button +添加用户
    %thead
      %td(align="center")编号
      %td(align="center") 用户名
      %td(align="center") 操作
    %tbody
      -@users.each do|user|
        %tr
          %td(align="center" style="width:37%")
            =user.id
          %td(align="center" style="width:37%")
            =user.name
          %td(align="center" style="width:37%")
            =link_to '删除'
            =link_to '修改密码'
  .right-padding(align="right")
    = will_paginate @users, :previous_label=> '<<', :next_label=> '>>'